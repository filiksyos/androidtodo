<resources>
    <!-- Base application theme. -->
    <style name="Theme.IELTS_PREPARATION_APP" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <!-- ... other themes ... -->

    <style name="Theme.IELTS_PREPARATION_APP.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/app_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.IELTS_PREPARATION_APP</item>
    </style>
</resources>
